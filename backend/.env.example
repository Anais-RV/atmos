# Configuración de variables de entorno para el backend de Atmos

# Información de la aplicación
APP_NAME=Atmos
APP_VERSION=1.0.0

# Configuración del servidor
HOST=0.0.0.0
PORT=8000

# Base de datos (cuando se implemente)
# DATABASE_URL=postgresql://user:password@localhost:5432/atmos
# DATABASE_URL=sqlite:///./atmos.db

# Seguridad (cuando se implemente autenticación)
# SECRET_KEY=your-secret-key-here-change-in-production
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys externas (cuando se necesiten)
# WEATHER_API_KEY=your-api-key-here

# Configuración de CORS
# Añadir más orígenes si es necesario
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Modo de desarrollo/producción
# DEBUG=True
# ENVIRONMENT=development

# Email (cuando se implemente)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password

# Logging
# LOG_LEVEL=INFO
